<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
     Utilisateurs
    </h1>
  </div>
</div>

<div class="col-lg-6">
     <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
      <tr>

        <th>Nom d'utilisateur</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
        <tr>

          <td>  <%= u.username %></td>
          <td>  <%= u.email %></td>
          <td>  
            <%= link_to 'Voir' , '/users/show/'+"#{u.id}" %>    
          </td>
        </tr>
        <%end %>
    

      
      </tbody>
    </table>
  </div>
</div>