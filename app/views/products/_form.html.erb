
<%= form_for @product, :html => { :multipart => true } do |f| %>
    <%= f.label :label%><br>
    <%= f.text_field :label %><br>
    <%= f.label :price %><br>
    <%= f.text_field :price %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
    <%= f.label :special_price %><br>
    <%= f.text_field :special_price %><br>
    <%= f.label :stock %> <br>
    <%= f.number_field :stock  %> <br>
    <%= f.label :image %> <br>
    <%= f.file_field :image %><br>
    <%= f.label :category_id %> <br>
      <%= f.collection_select(:category_id, Category.all, :id, :label) %><br>
    <%= f.label :sale_id %> <br>
    <%= f.collection_select(:sale_id, Sale.all, :id, :label) %><br>
    <br>
  <%= f.submit "ENREGISTRER", :class => "btn btn-success" %><br>
 <% end %>

